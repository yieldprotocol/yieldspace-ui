{
  "name": "@reimbursement-token/contracts",
  "version": "0.0.1",
  "private": true,
  "description": "Smart contracts for Yield, Inc's Reimbursement Token project.",
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "author": {
    "name": "Yield, Inc."
  },
  "files": [
    "/contracts"
  ],
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "check-port": "sh ./scripts/util/check-port.sh",
    "coverage": "cross-env CODE_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat run scripts/deployDevEnvironment.ts --network localhost",
    "postinstall": "cd .. && husky install",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "precommit": "lint-staged",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts}\"",
    "node": "hardhat node",
    "test": "yarn typechain && hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "resolutions": {
    "@solidity-parser/parser": "^0.13.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.1"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.11",
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/abstract-signer": "^5.4.1",
    "@ethersproject/bignumber": "^5.4.1",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/providers": "^5.4.4",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/fs-extra": "^9.0.12",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.0",
    "ethers": "^5.4.5",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "volta": {
    "extends": "../package.json"
  }
}
